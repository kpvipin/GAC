generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model attendance_sessions {
  id                  String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  tenant_id           String    @db.Uuid
  user_id             String    @db.Uuid
  work_date           DateTime  @db.Date
  check_in_time       DateTime  @db.Timestamptz(6)
  check_out_time      DateTime? @db.Timestamptz(6)
  total_work_seconds  Int?      @default(0)
  total_break_seconds Int?      @default(0)
  breaks              Json?     @default("[]")
  created_at          DateTime? @default(now()) @db.Timestamptz(6)
  updated_at          DateTime? @default(now()) @db.Timestamptz(6)
  tenants             tenants   @relation(fields: [tenant_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  users               users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([breaks], map: "idx_attendance_breaks_gin", type: Gin)
  @@index([work_date], map: "idx_attendance_date")
  @@index([tenant_id], map: "idx_attendance_tenant")
}

model tenants {
  id                  String                @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name                String
  plan                String?               @default("free")
  created_at          DateTime?             @default(now()) @db.Timestamptz(6)
  updated_at          DateTime?             @default(now()) @db.Timestamptz(6)
  attendance_sessions attendance_sessions[]
  users               users[]
}

model users {
  id                  String                @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  tenant_id           String                @db.Uuid
  full_name           String
  email               String?
  phone               String?
  password_hash       String?
  can_login           Boolean?              @default(false)
  is_employee         Boolean               @default(true)
  role                String?
  joining_date        DateTime?             @db.Date
  leaving_date        DateTime?             @db.Date
  base_salary         Decimal?              @db.Decimal(10, 2)
  hourly_rate         Decimal?              @db.Decimal(10, 2)
  manager_id          String?               @db.Uuid
  is_active           Boolean               @default(true)
  working_days        String[]              @default(["MON", "TUE", "WED", "THU", "FRI"])
  created_at          DateTime?             @default(now()) @db.Timestamptz(6)
  updated_at          DateTime?             @default(now()) @db.Timestamptz(6)
  deleted_at          DateTime?             @db.Timestamptz(6)
  attendance_sessions attendance_sessions[]
  users               users?                @relation("usersTousers", fields: [manager_id], references: [id], onUpdate: NoAction)
  other_users         users[]               @relation("usersTousers")
  tenants             tenants               @relation(fields: [tenant_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([manager_id], map: "idx_users_manager")
  @@index([tenant_id], map: "idx_users_tenant")
}
